# App Configuration
APP_NAME=ClubApp API
APP_VERSION=1.0.0
DEBUG=True

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB
DYNAMODB_TABLE_NAME=ClubAppTable
# For local development with DynamoDB Local (optional)
# DYNAMODB_ENDPOINT=http://localhost:8001

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# S3
S3_BUCKET_NAME=clubapp-photos

# Local Storage (for development without AWS)
# Set USE_LOCAL_STORAGE=True to store photos locally instead of S3
USE_LOCAL_STORAGE=True
LOCAL_STORAGE_PATH=./uploads
LOCAL_STORAGE_URL_PREFIX=http://localhost:8000/uploads

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173